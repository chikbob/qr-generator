APP_NAME=Laravel
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=${RENDER_EXTERNAL_URL}

LOG_CHANNEL=stack
LOG_LEVEL=debug

# --------------------------
# Database (SQLite — проще всего для Render Free)
# --------------------------
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/html/database/database.sqlite

# --------------------------
# Cache & Sessions
# --------------------------
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# --------------------------
# Mail (если нужно)
# --------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=no-reply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# --------------------------
# Misc
# --------------------------
VITE_APP_URL=${RENDER_EXTERNAL_URL}
